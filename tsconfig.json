{
	"compilerOptions": {
		"target": "es6",
		"lib": [
            "es6"
        ],
		"module": "commonjs",
		"sourceMap": true,
		"rootDir": "src",
		"moduleResolution": "node",
		"outDir": "out",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true   /* enable all strict type-checking options */
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"test-resources"
	]
}
