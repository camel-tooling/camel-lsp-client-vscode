{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "outDir": "out",
        "resolveJsonModule": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "inlineSources": true,
        "rootDir": "."
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "test-resources",
        ".test-extensions"
    ]
}
