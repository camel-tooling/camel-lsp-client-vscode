{
	"compilerOptions": {
		"module": "Node16",		
		"moduleResolution": "Node16",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true, // true causes like million errors here
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"out",
        "**/*.d.ts",
		"test Fixture with speci@l chars",
		"src/ui-test/resources",
		"node_modules",
		".vscode-test",
		"test-resources",
		".test-extensions"
	]
}
